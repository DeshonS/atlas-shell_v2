{
  "configurations": [
    {
      "name": "macos-clang-arm64",
      "includePath": [
        "${workspaceFolder}/**"
      ],
      "defines": [
        "_DEBUG",
        "UNICODE",
        "_UNICODE"
      ],
      "intelliSenseMode": "macos-clang-arm64",
      "compilerPath": "/usr/bin/clang",
      "cStandard": "${default}",
      "cppStandard": "${default}",
	  "compilerArgs": [
                "-g",        // *** ESSENTIAL FOR DEBUGGING ***
                "-Wall",     // Enable all warnings (highly recommended)
                "-Wextra",   // 
	  ]
    }
  ],
  "version": 4
}